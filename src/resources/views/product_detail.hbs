<div class="product_detail">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5 col-xl-5 col1">
                <img src="{{product.image}}" alt="">
            </div>
            <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7 col-xl-7 col2">
                <h1>{{product.name}}</h1>
                <div class="product-view-one">
                    <div class="supplier">
                        <span>Nhà cung cấp</span>
                        <a href="">{{product.supplier}}</a>
                    </div>
                    <div class="trademark">
                        <span>Thương hiệu</span>
                        <a href="">{{product.trademark}}</a>
                    </div>
                </div>
                <div class="product-view-two">
                    <div class="origin">
                        <span>Xuất xứ : {{product.origin}}</span>
                    </div>
                </div>
                <h2>{{product.price}}</h2>
                <div class="function-button row">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 btn1">
                        <button>
                            <i class="fa fa-cart-arrow-down" aria-hidden="true"></i>
                            <span>Thêm vào giỏ hàng</span>
                        </button>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 btn2">
                        <button class="btn2">
                            <span>Mua ngay</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
